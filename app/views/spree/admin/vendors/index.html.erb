<h1>Listing Vendors</h1>

<table>
  <thead>
    <tr>
      <th>Vendorname</th>
      <th>Contactname</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>Country</th>
      <th>State</th>
      <th>Zip</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= vendor.vendorname %></td>
        <td><%= vendor.contactname %></td>
        <td><%= vendor.email %></td>
        <td><%= vendor.phone %></td>
        <td><%= vendor.address1 %></td>
        <td><%= vendor.address2 %></td>
        <td><%= vendor.city %></td>
        <td><%= vendor.country %></td>
        <td><%= vendor.state %></td>
        <td><%= vendor.zip %></td>
        <td><%= vendor.active %></td>
        <td><%= link_to 'Show', admin_vendor_path(vendor) %></td>
        <td><%= link_to 'Edit', edit_admin_vendor_path(vendor) %></td>
        <td><%= link_to 'Destroy', admin_vendor_path(vendor), confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vendor', new_admin_vendor_path %>
