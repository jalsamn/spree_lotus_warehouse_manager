<%= form_for(@purchase_order, url: admin_purchase_orders_path) do |f| %>
  <% if @purchase_order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@purchase_order.errors.count, "error") %> prohibited this vendor from being saved:</h2>

      <ul>
      <% @purchase_order.errors.full_messages.each do |message| %>
