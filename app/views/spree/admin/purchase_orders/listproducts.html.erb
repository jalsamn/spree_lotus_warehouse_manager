<h1>Listing Products for <%= @vendor.vendorname %></h1>

<%= form_tag admin_add_individual_products_path do %>  
<table>
  <thead>
    <tr>
      <th>Barcode</th>
      <th>Name</th>
      <th>Inventory</th>
      <th>AddToPO</th>
    </tr>
  </thead>

  <tbody>
    <% for var in @sorted_vars %>
      <tr  id="variant_<%= var.id %>">
        <%= hidden_field_tag 'purchase_order_id', @purchase_order.id %>
        <td><%= var.barcode %></td>
        <td><%= var.name %></td>
        <td><%= var.total_on_hand %></td>
       <td>
          <%= form_tag(admin_add_individual_products_1_path, remote: true, class: "table_form") do %>
          <%= hidden_field_tag("variant_id", value = var.id) %>
          <%= hidden_field_tag("po_id", value = @purchase_order.id) %>
          <label>
            <%= submit_tag "add_individual_products_1", class: "btn btn-mini" %>
          </label>
        <% end %>
        </td>
      </tr>
    
    <% end %>
  </tbody>
</table>
<p><%= submit_tag "Add Checked" %></p>  
<br>
<% end %>  

